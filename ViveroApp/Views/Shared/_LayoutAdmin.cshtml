<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/@@phosphor-icons/web@2.1.1/src/regular/style.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/@@phosphor-icons/web@2.1.1/src/fill/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Geist', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
        <nav class="px-6">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center gap-4">
                    <button id="sidebar-toggle" class="lg:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        <i class="ph ph-list text-2xl"></i>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 text-xl font-bold text-[#1E6241]">
                        <i class="ph ph-plant text-2xl"></i>
                        <span>ViveroApp</span>
                    </a>
                    <span class="hidden md:inline px-3 py-1 bg-purple-100 text-purple-700 text-sm font-semibold rounded-full">
                        Admin Panel
                    </span>
                </div>

                <div class="flex items-center gap-3">
                    <a asp-controller="Home" asp-action="Index"
                       class="hidden md:flex items-center gap-2 px-4 py-2 text-gray-600 hover:text-[#1E6241] transition-colors">
                        <i class="ph ph-house"></i>
                        <span>Ver Sitio</span>
                    </a>

                    <div class="relative">
                        <button id="user-menu-button" class="flex items-center gap-2 px-4 py-2 bg-[#E9F0EC] text-[#1E6241] rounded-lg hover:bg-[#BCD0C6] transition-colors font-medium">
                            <i class="ph ph-user-circle text-xl"></i>
                            <span>@User.Identity.Name</span>
                            <i class="ph ph-caret-down text-sm"></i>
                        </button>

                        <div id="user-dropdown" class="hidden absolute right-0 mt-2 w-56 bg-white border border-gray-200 rounded-xl shadow-lg overflow-hidden">
                            <a asp-controller="Account" asp-action="Profile"
                               class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-gray-50 transition-colors">
                                <i class="ph ph-user text-lg"></i>
                                <span>Mi Perfil</span>
                            </a>
                            <hr class="border-gray-200">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="flex items-center gap-3 w-full px-4 py-3 text-red-600 hover:bg-red-50 transition-colors">
                                    <i class="ph ph-sign-out text-lg"></i>
                                    <span>Cerrar Sesión</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="flex">
        <aside id="sidebar"
               class="fixed top-0 left-0 h-screen w-64 bg-white border-r border-gray-200 transition-transform duration-300 z-40 translate-x-0">
            <div class="pt-16">
                <nav class="p-4 space-y-1 overflow-y-auto h-[calc(100vh-4rem)]">
                    <a asp-controller="Admin" asp-action="Index"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-purple-50 hover:text-purple-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "bg-purple-50 text-purple-700 font-semibold" : "")">
                        <i class="ph ph-gauge text-xl"></i>
                        <span>Dashboard</span>
                    </a>

                    <hr class="my-3 border-gray-200">

                    <a asp-controller="Admin" asp-action="Plantas"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-green-50 hover:text-green-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Plantas" || ViewContext.RouteData.Values["action"]?.ToString() == "CrearPlanta" || ViewContext.RouteData.Values["action"]?.ToString() == "EditarPlanta" ? "bg-green-50 text-green-700 font-semibold" : "")">
                        <i class="ph ph-plant text-xl"></i>
                        <span>Plantas</span>
                    </a>

                    <a asp-controller="Admin" asp-action="Categorias"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-purple-50 hover:text-purple-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Categorias" ? "bg-purple-50 text-purple-700 font-semibold" : "")">
                        <i class="ph ph-tag text-xl"></i>
                        <span>Categorías</span>
                    </a>

                    <a asp-controller="Admin" asp-action="Usuarios"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Usuarios" ? "bg-blue-50 text-blue-700 font-semibold" : "")">
                        <i class="ph ph-users text-xl"></i>
                        <span>Usuarios</span>
                    </a>

                    <hr class="my-3 border-gray-200">

                    <p class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Configuración</p>

                    <a asp-controller="Admin" asp-action="Riegos"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-cyan-50 hover:text-cyan-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Riegos" ? "bg-cyan-50 text-cyan-700 font-semibold" : "")">
                        <i class="ph ph-drop text-xl"></i>
                        <span>Tipos de Riego</span>
                    </a>

                    <a asp-controller="Admin" asp-action="Luces"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-yellow-50 hover:text-yellow-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Luces" ? "bg-yellow-50 text-yellow-700 font-semibold" : "")">
                        <i class="ph ph-sun text-xl"></i>
                        <span>Tipos de Luz</span>
                    </a>

                    <a asp-controller="Admin" asp-action="Sustratos"
                       class="flex items-center gap-3 px-4 py-3 text-gray-700 hover:bg-amber-50 hover:text-amber-700 rounded-lg transition-colors @(ViewContext.RouteData.Values["action"]?.ToString() == "Sustratos" ? "bg-amber-50 text-amber-700 font-semibold" : "")">
                        <i class="ph ph-tree text-xl"></i>
                        <span>Tipos de Sustrato</span>
                    </a>
                </nav>
            </div>
        </aside>

        <button id="sidebarToggleBtn"
                class="fixed top-20 left-64 z-50 bg-[#1E6241] hover:bg-[#195136] text-white p-2 rounded-r-lg transition-all duration-300">
            <i class="ph ph-caret-left text-lg"></i>
        </button>

        <div id="sidebar-overlay" class="hidden fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden"></div>

        <main id="mainContent" class="flex-1 p-6 lg:p-8 min-h-screen transition-all duration-300 ml-64">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('sidebarToggleBtn');
        const mainContent = document.getElementById('mainContent');

        const sidebarVisible = localStorage.getItem('sidebarVisible') !== 'false';

        if (!sidebarVisible) {
            sidebar.classList.add('-translate-x-full');
            mainContent.classList.replace('ml-64', 'ml-0');
            toggleBtn.innerHTML = '<i class="ph ph-caret-right text-lg"></i>';
            toggleBtn.style.left = '0';
        }

        toggleBtn.addEventListener('click', () => {
            const isHidden = sidebar.classList.toggle('-translate-x-full');
            mainContent.classList.toggle('ml-64');
            mainContent.classList.toggle('ml-0');

            toggleBtn.innerHTML = isHidden
                ? '<i class="ph ph-caret-right text-lg"></i>'
                : '<i class="ph ph-caret-left text-lg"></i>';

            toggleBtn.style.left = isHidden ? '0' : '16rem';

            localStorage.setItem('sidebarVisible', !isHidden);
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>