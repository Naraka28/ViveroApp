@using ViveroApp.Models;
@model IEnumerable<Plantas>
@{
    ViewData["Title"] = "Todas las Plantas";
}

<section class="my-8">
    <h2 class="text-4xl font-bold text-gray-800 mb-4">
        Todas las Plantas
    </h2>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl">
        Explora nuestra colección completa
    </p>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        @foreach (var planta in Model)
        {
            <a asp-action="DetallePlanta" asp-route-id="@planta.Id"
               class="plant-card relative bg-cover bg-center bg-no-repeat overflow-hidden cursor-pointer group transition-all duration-300"
               style="background-image: url('@(planta.Imagen_Url ?? "/images/default-plant.jpg")');">

                <div class="absolute inset-0 bg-cover bg-center bg-no-repeat transition-transform duration-500 group-hover:scale-110"
                     style="background-image: url('@(planta.Imagen_Url ?? "/images/default-plant.jpg")');"></div>

                <div class="absolute inset-0 bg-black/30 group-hover:bg-black/40 transition-colors duration-300"></div>

                <div class="absolute bottom-0 left-0 right-0 p-6 text-white z-10 transform transition-transform duration-300 group-hover:-translate-y-2">
                    <h3 class="text-2xl leading-tight">
                        @planta.Nombre
                    </h3>
                    <p class="text-lg font-light opacity-90">
                        @planta.Nombre_Cientifico
                    </p>
                </div>
            </a>
        }
    </div>
</section>