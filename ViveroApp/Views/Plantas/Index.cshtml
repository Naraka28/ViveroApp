@using ViveroApp.Models;
@model IEnumerable<Plantas>
@{
    ViewData["Title"] = "Home Page";
}
<table class="min-w-full bg-white border border-gray-300">
    <thead>
        <tr class="bg-gray-100">
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 border-b border-gray-300">Nombre</th>
            <th class="px-6 py-3 text-left text-sm font-medium text-gray-700 border-b border-gray-300"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planta in Model)
        {
            <tr class="border-b border-gray-200">
                <td class="px-6 py-4">
                    @planta.Nombre
                </td>
                <td class="px-6 py-4">
                    <a asp-action="DetallePlanta" asp-route-id="@planta.Id" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Detalle planta</a>
                </td>
            </tr>
        }
    </tbody>
</table>