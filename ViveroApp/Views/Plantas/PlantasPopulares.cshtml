@using ViveroApp.Dto;
@model IEnumerable<PlantaPopularDto>
@{
    ViewData["Title"] = "Populares";
}
<div class="container mx-auto my-4 px-4">
    <h2 class="mb-4 text-2xl font-bold">Plantas Populares</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var planta in Model)
        {
            <div class="mb-4">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="@planta.ImagenUrl" class="w-full h-48 object-cover" alt="@planta.Nombre">
                    <div class="p-4">
                        <h5 class="text-lg font-bold mb-2">@planta.Nombre</h5>
                        <p class="text-gray-500 text-sm mb-2">@planta.NombreCientifico</p>
                        <p class="mb-1"><strong>Dificultad:</strong> @planta.Dificultad</p>
                        <p class="mb-1"><strong>Riego:</strong> @planta.TipoRiego</p>
                        <p class="mb-1"><strong>Luz:</strong> @planta.TipoLuz</p>
                        <p class="mb-0"><strong>@planta.UsuariosQueLaTienen</strong> usuarios</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>