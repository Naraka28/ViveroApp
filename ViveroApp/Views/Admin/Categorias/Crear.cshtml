@model ViveroApp.Dto.CategoriaDto
@{
    ViewData["Title"] = "Crear Nueva Categoría";
}

<section class="my-[3rem]">
    <h2 class="text-4xl font-bold text-gray-800 mb-6">
        <i class="ph ph-plus-circle text-green-600"></i>
        Crear Nueva Categoría
    </h2>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 lg:p-8 max-w-3xl mx-auto">
        <form asp-action="CrearCategoria" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="mb-4">
                        <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                        <input asp-for="Nombre" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Ej: Plantas de Interior" />
                        <span asp-validation-for="Nombre" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                        <textarea asp-for="Descripcion" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Describe brevemente esta categoría..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-red-600 text-sm"></span>
                    </div>

                </div>

                <div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Imagen de Categoría (Opcional)</label>

                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-green-500 transition-colors">
                            <div id="uploadPrompt" class="space-y-2">
                                <i class="ph ph-upload-simple text-4xl text-gray-400"></i>
                                <div>
                                    <label for="imagenInput" class="cursor-pointer text-green-600 hover:text-green-700 font-medium">
                                        Selecciona una imagen
                                    </label>
                                    <p class="text-sm text-gray-500">o arrastra y suelta aquí</p>
                                </div>
                                <p class="text-xs text-gray-400">PNG, JPG, WEBP hasta 5MB</p>
                            </div>

                            <div id="previewContainer" class="hidden space-y-3">
                                <img id="imagePreview" src="" alt="Preview" class="max-h-40 mx-auto rounded-lg" />
                                <p id="fileName" class="text-sm text-gray-600"></p>
                                <button type="button" onclick="removeImage()" class="text-red-600 hover:text-red-800 text-sm font-medium">
                                    <i class="ph ph-trash"></i> Eliminar
                                </button>
                            </div>
                        </div>

                        <input asp-for="ImagenFile"
                               type="file"
                               accept="image/*"
                               id="imagenInput"
                               onchange="previewImage(event)"
                               class="hidden" />
                        <span asp-validation-for="ImagenFile" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-4">
                        <div class="flex items-start gap-3">
                            <i class="ph ph-info text-blue-600 text-xl mt-0.5"></i>
                            <div class="text-sm text-blue-800">
                                <p class="font-medium mb-1">Consejos:</p>
                                <ul class="list-disc list-inside space-y-1 text-xs">
                                    <li>La imagen es decorativa (opcional)</li>
                                    <li>Usa imágenes cuadradas para mejor visualización</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-4">
                <a asp-action="Categorias" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    Cancelar
                </a>
                <button type="submit" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-2 rounded-lg inline-flex items-center gap-2 transition-colors">
                    <i class="ph ph-plus-circle"></i>
                    Crear Categoría
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
         function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('fileName').textContent = file.name;
                    document.getElementById('previewContainer').classList.remove('hidden');
                    document.getElementById('uploadPrompt').classList.add('hidden');
                }
                reader.readAsDataURL(file);
            }
        }

        function removeImage() {
            document.getElementById('imagenInput').value = '';
            document.getElementById('imagePreview').src = '';
            document.getElementById('fileName').textContent = '';
            document.getElementById('previewContainer').classList.add('hidden');
            document.getElementById('uploadPrompt').classList.remove('hidden');
        }
    </script>
}