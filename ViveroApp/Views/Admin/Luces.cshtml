@model IEnumerable<ViveroApp.Models.Luz>
@{
    ViewData["Title"] = "Gestionar Luces";
}

<section class="my-[3rem]">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-4xl font-bold text-gray-800">Gestionar Luces</h2>
            <p class="text-xl text-gray-600 mt-2">@Model.Count() tipos de luz registrados</p>
        </div>
        <a asp-action="CrearLuz" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-3 rounded-xl inline-flex items-center gap-2">
            <i class="ph ph-plus-circle"></i>
            <span>Nueva Luz</span>
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 text-green-800 px-6 py-4 rounded-r-xl mb-6">
            @TempData["Mensaje"]
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var luz in Model)
        {
            <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                            <i class="ph ph-sun text-yellow-600 text-2xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-gray-900">@luz.Tipo</h3>
                        </div>
                    </div>
                </div>

                <p class="text-gray-600 text-sm mb-4">@luz.Descripcion</p>

                <div class="space-y-2 mb-4">
                    @if (luz.HorasMin.HasValue || luz.HorasMax.HasValue)
                    {
                        <div class="flex items-center gap-2 text-sm">
                            <i class="ph ph-clock text-gray-500"></i>
                            <span class="text-gray-600">
                                @if (luz.HorasMin.HasValue && luz.HorasMax.HasValue)
                                {
                                    @:@luz.HorasMin - @luz.HorasMax horas/día
                                }
                                else if (luz.HorasMin.HasValue)
                                {
                                    @:Mínimo @luz.HorasMin horas/día
                                }
                                else if (luz.HorasMax.HasValue)
                                {
                                    @:Máximo @luz.HorasMax horas/día
                                }
                            </span>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(luz.UbicacionRecomendada))
                    {
                        <div class="flex items-center gap-2 text-sm">
                            <i class="ph ph-map-pin text-gray-500"></i>
                            <span class="text-gray-600">@luz.UbicacionRecomendada</span>
                        </div>
                    }
                </div>

                <div class="flex justify-end gap-2 pt-4 border-t border-gray-200">
                    <a asp-action="EditarLuz" asp-route-id="@luz.Id" class="text-blue-600 hover:text-blue-800 px-3 py-2">
                        <i class="ph ph-pencil text-xl"></i>
                    </a>
                    <form asp-action="EliminarLuz" asp-route-id="@luz.Id" method="post" class="inline" onsubmit="return confirm('¿Eliminar este tipo de luz?')">
                        <button type="submit" class="text-red-600 hover:text-red-800 px-3 py-2">
                            <i class="ph ph-trash text-xl"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</section>