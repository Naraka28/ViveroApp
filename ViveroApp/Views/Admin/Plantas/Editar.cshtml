@model ViveroApp.Dto.EditarPlantaDto
@{
    ViewData["Title"] = "Editar Planta";
    var categoriasSeleccionadas = Model.CategoriasIds ?? new List<int>();
}

<section class="my-[3rem]">
    <h2 class="text-4xl font-bold text-gray-800 mb-6">
        <i class="ph ph-pencil text-blue-600"></i>
        Editar Planta
    </h2>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 lg:p-8">
        <form asp-action="EditarPlanta" asp-route-id="@Model.Id" method="post" id="formEditarPlanta" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagenUrl" id="imagenUrlHidden" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <div class="mb-4">
                        <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre Común</label>
                        <input asp-for="Nombre" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="Nombre" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NombreCientifico" class="block text-sm font-medium text-gray-700 mb-1">Nombre Científico</label>
                        <input asp-for="NombreCientifico" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="NombreCientifico" class="text-red-600 text-sm"></span>
                    </div>

                    <input type="hidden" asp-for="ImagenUrl" id="imagenUrlHidden" />

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Imagen Actual</label>
                        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                        {
                            <img src="@Model.ImagenUrl" alt="Imagen de @Model.Nombre" class="w-full h-48 object-cover rounded-lg mb-2 border border-gray-200" />
                        }
                        else
                        {
                            <div class="w-full h-48 flex items-center justify-center bg-gray-100 rounded-lg mb-2 border border-gray-200">
                                <span class="text-gray-500">Sin imagen</span>
                            </div>
                        }

                        <label asp-for="ImagenFile" class="block text-sm font-medium text-gray-700 mb-1">Reemplazar Imagen (Opcional)</label>
                        <input asp-for="ImagenFile" type="file" accept="image/*" class="w-full file:mr-4 file:py-2 file:px-4
                               file:rounded-lg file:border-0 file:text-sm file:font-semibold
                               file:bg-blue-100 file:text-blue-700 hover:file:bg-blue-200
                               border border-gray-300 rounded-lg cursor-pointer focus:outline-none
                               focus:ring-2 focus:ring-blue-500" />
                        <span asp-validation-for="ImagenFile" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Categorías</label>
                        <div class="relative">
                            <select id="categoriaSelect" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Seleccionar categoría...</option>
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    if (categoriasSeleccionadas.Contains(cat.Id))
                                    {
                                        <option value="@cat.Id" data-nombre="@cat.Nombre" data-icono="@cat.Icono" disabled>
                                            @Html.Raw(cat.Icono) @cat.Nombre
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@cat.Id" data-nombre="@cat.Nombre" data-icono="@cat.Icono">
                                            @Html.Raw(cat.Icono) @cat.Nombre
                                        </option>
                                    }
                                }

                            </select>
                        </div>
                        
                        <div id="categoriasSeleccionadas" class="flex flex-wrap gap-2 mt-3 min-h-[2rem]">
                            @foreach (var cat in ViewBag.Categorias)
                            {
                                if (categoriasSeleccionadas.Contains(cat.Id))
                                {
                                    <div class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm font-medium" data-id="@cat.Id">
                                        <span>@cat.Icono</span>
                                        <span>@cat.Nombre</span>
                                        <button type="button" class="ml-1 hover:text-blue-900" onclick="eliminarCategoria('@cat.Id')">
                                            <i class="ph ph-x"></i>
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                        
                        <div id="categoriasHiddenInputs">
                            @foreach (var catId in categoriasSeleccionadas)
                            {
                                <input type="hidden" name="CategoriasIds" value="@catId" data-id="@catId" />
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                        <textarea asp-for="Descripcion" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="Descripcion" class="text-red-600 text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CuidadosEspeciales" class="block text-sm font-medium text-gray-700 mb-1">Cuidados Especiales</label>
                        <textarea asp-for="CuidadosEspeciales" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="CuidadosEspeciales" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        <div class="mb-4">
                            <label asp-for="RiegoId" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Riego</label>
                            <select asp-for="RiegoId" asp-items="@(new SelectList(ViewBag.Riegos, "Id", "Nombre"))" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Seleccionar Riego</option>
                            </select>
                            <span asp-validation-for="RiegoId" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="LuzId" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Luz</label>
                            <select asp-for="LuzId" asp-items="@(new SelectList(ViewBag.Luces, "Id", "Tipo"))" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Seleccionar Luz</option>
                            </select>
                            <span asp-validation-for="LuzId" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SustratoId" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Sustrato</label>
                            <select asp-for="SustratoId" asp-items="@(new SelectList(ViewBag.Sustratos, "Id", "Tipo"))" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Seleccionar Sustrato</option>
                            </select>
                            <span asp-validation-for="SustratoId" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Dificultad" class="block text-sm font-medium text-gray-700 mb-1">Dificultad</label>
                            <select asp-for="Dificultad" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Seleccionar Dificultad</option>
                                <option value="baja">Baja</option>
                                <option value="media">Media</option>
                                <option value="alta">Alta</option>
                            </select>
                            <span asp-validation-for="Dificultad" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AlturaMaxCm" class="block text-sm font-medium text-gray-700 mb-1">Altura Máxima (cm)</label>
                            <input asp-for="AlturaMaxCm" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span asp-validation-for="AlturaMaxCm" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="mb-4 flex items-center justify-center">
                            <div class="flex items-center h-full">
                                <input asp-for="Toxica" type="checkbox" class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                                <label asp-for="Toxica" class="ml-2 block text-sm font-medium text-gray-900">¿Es tóxica?</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notas" class="block text-sm font-medium text-gray-700 mb-1">Notas Adicionales</label>
                        <textarea asp-for="Notas" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                        <span asp-validation-for="Notas" class="text-red-600 text-sm"></span>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-4">
                <a asp-action="Plantas" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Cancelar
                </a>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg inline-flex items-center gap-2">
                    <i class="ph ph-floppy-disk"></i>
                    Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        function previewImage(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('fileName').textContent = file.name;
                    document.getElementById('previewContainer').classList.remove('hidden');
                    document.getElementById('uploadPrompt').classList.add('hidden');
                }
                reader.readAsDataURL(file);
            }
        }

        const categoriasSeleccionadas = new Set([
            @foreach (var catId in categoriasSeleccionadas)
            {
                @:@catId,
            }
        ]);
        
        document.getElementById('categoriaSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const categoriaId = selectedOption.value;
            const categoriaNombre = selectedOption.dataset.nombre;
            const categoriaIcono = selectedOption.dataset.icono || '';
            
            if (categoriaId && !categoriasSeleccionadas.has(categoriaId)) {
                categoriasSeleccionadas.add(categoriaId);
                
                const badge = document.createElement('div');
                badge.className = 'inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-100 text-blue-800 rounded-full text-sm font-medium';
                badge.dataset.id = categoriaId;
                badge.innerHTML = `
                    <span>${categoriaIcono}</span>
                    <span>${categoriaNombre}</span>
                    <button type="button" class="ml-1 hover:text-blue-900" onclick="eliminarCategoria('${categoriaId}')">
                        <i class="ph ph-x"></i>
                    </button>
                `;
                
                document.getElementById('categoriasSeleccionadas').appendChild(badge);
                
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = 'CategoriasIds';
                hiddenInput.value = categoriaId;
                hiddenInput.dataset.id = categoriaId;
                document.getElementById('categoriasHiddenInputs').appendChild(hiddenInput);
                
                selectedOption.disabled = true;
            }
            
            this.value = '';
        });
        
        function eliminarCategoria(categoriaId) {
            categoriasSeleccionadas.delete(categoriaId);
            
            const badge = document.querySelector(`#categoriasSeleccionadas [data-id="${categoriaId}"]`);
            if (badge) badge.remove();
            
            const hiddenInput = document.querySelector(`#categoriasHiddenInputs input[data-id="${categoriaId}"]`);
            if (hiddenInput) hiddenInput.remove();
            
            const option = document.querySelector(`#categoriaSelect option[value="${categoriaId}"]`);
            if (option) option.disabled = false;
        }
    </script>
}