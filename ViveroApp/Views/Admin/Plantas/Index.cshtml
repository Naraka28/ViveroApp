@model ViveroApp.Dto.PaginacionDto<ViveroApp.Dto.DetallePlantaDto>
@{
    ViewData["Title"] = "Gestionar Plantas";
}

<section class="my-[3rem]">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-4xl font-bold text-gray-800">Gestionar Plantas</h2>
            <p class="text-xl text-gray-600 mt-2">@Model.TotalRegistros plantas registradas</p>
        </div>
        <a asp-action="CrearPlanta" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-3 rounded-xl inline-flex items-center gap-2">
            <i class="ph ph-plus-circle"></i>
            <span>Nueva Planta</span>
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 text-green-800 px-6 py-4 rounded-r-xl mb-6">
            @TempData["Mensaje"]
        </div>
    }

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
        <form method="get" asp-action="Plantas" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Buscar</label>
                <input type="text" name="Busqueda" value="@Context.Request.Query["Busqueda"]"
                       placeholder="Nombre o científico..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Dificultad</label>
                <select name="Dificultad" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="">Todas</option>
                    <option value="baja" selected="@(Context.Request.Query["Dificultad"] == "baja")">Baja</option>
                    <option value="media" selected="@(Context.Request.Query["Dificultad"] == "media")">Media</option>
                    <option value="alta" selected="@(Context.Request.Query["Dificultad"] == "alta")">Alta</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Tóxica</label>
                <select name="Toxica" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="">Todas</option>
                    <option value="true" selected="@(Context.Request.Query["Toxica"] == "true")">Sí</option>
                    <option value="false" selected="@(Context.Request.Query["Toxica"] == "false")">No</option>
                </select>
            </div>

            <div class="flex items-end gap-2">
                <button type="submit" class="flex-1 bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-2 rounded-lg inline-flex items-center justify-center gap-2">
                    <i class="ph ph-magnifying-glass"></i>
                    Filtrar
                </button>
                <a asp-action="Plantas" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg inline-flex items-center justify-center">
                    <i class="ph ph-x"></i>
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Imagen</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nombre</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nombre Científico</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Dificultad</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Tóxica</th>
                    <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var planta in Model.Items)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            @if (!string.IsNullOrEmpty(planta.ImagenUrl))
                            {
                                <img src="@planta.ImagenUrl" alt="@planta.Nombre" class="w-16 h-16 object-cover rounded-lg">
                            }
                            else
                            {
                                <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <i class="ph ph-plant text-gray-400 text-2xl"></i>
                                </div>
                            }
                        </td>
                        <td class="px-6 py-4 font-medium text-gray-900">@planta.Nombre</td>
                        <td class="px-6 py-4 text-gray-600 italic">@planta.NombreCientifico</td>
                        <td class="px-6 py-4">
                            <span class="px-3 py-1 rounded-full text-sm bg-@(planta.Dificultad == "baja" ? "green" : planta.Dificultad == "media" ? "yellow" : "red")-100 text-@(planta.Dificultad == "baja" ? "green" : planta.Dificultad == "media" ? "yellow" : "red")-800">
                                @planta.Dificultad
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            @if (planta.Toxica)
                            {
                                <span class="px-3 py-1 rounded-full text-sm bg-red-100 text-red-800">Sí</span>
                            }
                            else
                            {
                                <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">No</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-right space-x-2">
                            <a asp-action="EditarPlanta" asp-route-id="@planta.Id" class="text-blue-600 hover:text-blue-800">
                                <i class="ph ph-pencil text-xl"></i>
                            </a>
                            <form asp-action="EliminarPlanta" asp-route-id="@planta.Id" method="post" class="inline" onsubmit="return confirm('¿Eliminar esta planta?')">
                                <button type="submit" class="text-red-600 hover:text-red-800">
                                    <i class="ph ph-trash text-xl"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Items.Any())
        {
            <div class="text-center py-12">
                <i class="ph ph-plant text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">No se encontraron plantas</p>
            </div>
        }

        @if (Model.TotalPaginas > 1)
        {
            <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Mostrando @((Model.PaginaActual - 1) * Model.RegistrosPorPagina + 1) a @(Math.Min(Model.PaginaActual * Model.RegistrosPorPagina, Model.TotalRegistros)) de @Model.TotalRegistros resultados
                </div>
                <div class="flex gap-2">
                    @if (Model.TienePaginaAnterior)
                    {
                        <a asp-action="Plantas"
                           asp-route-pagina="@(Model.PaginaActual - 1)"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-dificultad="@Context.Request.Query["Dificultad"]"
                           asp-route-toxica="@Context.Request.Query["Toxica"]"
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Anterior
                        </a>
                    }

                    @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
                    {
                        <a asp-action="Plantas"
                           asp-route-pagina="@i"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-dificultad="@Context.Request.Query["Dificultad"]"
                           asp-route-toxica="@Context.Request.Query["Toxica"]"
                           class="px-4 py-2 border rounded-lg @(i == Model.PaginaActual ? "bg-[#1E6241] text-white border-[#1E6241]" : "border-gray-300 hover:bg-gray-50")">
                            @i
                        </a>
                    }

                    @if (Model.TienePaginaSiguiente)
                    {
                        <a asp-action="Plantas"
                           asp-route-pagina="@(Model.PaginaActual + 1)"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-dificultad="@Context.Request.Query["Dificultad"]"
                           asp-route-toxica="@Context.Request.Query["Toxica"]"
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Siguiente
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</section>