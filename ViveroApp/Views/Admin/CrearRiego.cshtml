@model ViveroApp.Models.Riego
@{
    ViewData["Title"] = "Crear Tipo de Riego";
}

<section class="my-[3rem]">
    <h2 class="text-4xl font-bold text-gray-800 mb-6">
        <i class="ph ph-plus-circle text-blue-600"></i>
        Crear Tipo de Riego
    </h2>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 lg:p-8">
        <form asp-action="CrearRiego" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label asp-for="Nombre" class="block text-sm font-medium text-gray-700 mb-1">Nombre del Riego</label>
                    <input asp-for="Nombre" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="ej: Riego Abundante" />
                    <span asp-validation-for="Nombre" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Nivel" class="block text-sm font-medium text-gray-700 mb-1">Nivel de Riego</label>
                    <select asp-for="Nivel" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">Seleccionar nivel...</option>
                        <option value="bajo">Bajo</option>
                        <option value="medio">Medio</option>
                        <option value="alto">Alto</option>
                    </select>
                    <span asp-validation-for="Nivel" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">&nbsp;</label>
                    <div class="h-[42px]"></div>
                </div>

                <div class="mb-4">
                    <label asp-for="FrecuenciaDiasVerano" class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="ph ph-sun text-orange-500"></i>
                        Frecuencia Verano (días)
                    </label>
                    <input asp-for="FrecuenciaDiasVerano" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="ej: 2" />
                    <span asp-validation-for="FrecuenciaDiasVerano" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="FrecuenciaDiasInvierno" class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="ph ph-snowflake text-blue-500"></i>
                        Frecuencia Invierno (días)
                    </label>
                    <input asp-for="FrecuenciaDiasInvierno" type="number" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="ej: 5" />
                    <span asp-validation-for="FrecuenciaDiasInvierno" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-2 mb-4">
                    <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                    <textarea asp-for="Descripcion" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Describe este tipo de riego..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-2 mb-4">
                    <label asp-for="Recomendaciones" class="block text-sm font-medium text-gray-700 mb-1">Recomendaciones</label>
                    <textarea asp-for="Recomendaciones" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Consejos y recomendaciones para este tipo de riego..."></textarea>
                    <span asp-validation-for="Recomendaciones" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-4">
                <a asp-action="Riegos" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Cancelar
                </a>
                <button type="submit" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-2 rounded-lg inline-flex items-center gap-2">
                    <i class="ph ph-plus-circle"></i>
                    Crear Riego
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
}