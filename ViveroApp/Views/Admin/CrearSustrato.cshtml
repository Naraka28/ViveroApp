@model ViveroApp.Models.Sustrato
@{
    ViewData["Title"] = "Crear Tipo de Sustrato";
}

<section class="my-[3rem]">
    <h2 class="text-4xl font-bold text-gray-800 mb-6">
        <i class="ph ph-plus-circle text-amber-700"></i>
        Crear Tipo de Sustrato
    </h2>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 lg:p-8">
        <form asp-action="CrearSustrato" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    <label asp-for="Tipo" class="block text-sm font-medium text-gray-700 mb-1">Tipo de Sustrato</label>
                    <input asp-for="Tipo" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="ej: Sustrato Universal" />
                    <span asp-validation-for="Tipo" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="PhRango" class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="ph ph-test-tube text-purple-500"></i>
                        Rango de pH
                    </label>
                    <input asp-for="PhRango" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="ej: 6.0 - 7.0" />
                    <span asp-validation-for="PhRango" class="text-red-600 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Drenaje" class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="ph ph-drop-half text-blue-500"></i>
                        Tipo de Drenaje
                    </label>
                    <select asp-for="Drenaje" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500">
                        <option value="">Seleccionar drenaje...</option>
                        <option value="Excelente">Excelente</option>
                        <option value="Bueno">Bueno</option>
                        <option value="Moderado">Moderado</option>
                        <option value="Bajo">Bajo</option>
                    </select>
                    <span asp-validation-for="Drenaje" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-2 mb-4">
                    <label asp-for="Composicion" class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="ph ph-package text-green-500"></i>
                        Composición
                    </label>
                    <input asp-for="Composicion" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="ej: Turba, perlita, vermiculita" />
                    <span asp-validation-for="Composicion" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-2 mb-4">
                    <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                    <textarea asp-for="Descripcion" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Describe este tipo de sustrato y sus características..."></textarea>
                    <span asp-validation-for="Descripcion" class="text-red-600 text-sm"></span>
                </div>

                <div class="md:col-span-2 mb-4">
                    <label asp-for="Recomendaciones" class="block text-sm font-medium text-gray-700 mb-1">Recomendaciones</label>
                    <textarea asp-for="Recomendaciones" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Consejos de uso y plantas recomendadas..."></textarea>
                    <span asp-validation-for="Recomendaciones" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="mt-8 flex justify-end gap-4">
                <a asp-action="Sustratos" class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    Cancelar
                </a>
                <button type="submit" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-2 rounded-lg inline-flex items-center gap-2">
                    <i class="ph ph-plus-circle"></i>
                    Crear Sustrato
                </button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}