@model ViveroApp.Dto.PaginacionDto<ViveroApp.Dto.UsuarioAdminDto>
@{
    ViewData["Title"] = "Gestionar Usuarios";
}

<section class="my-[3rem]">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h2 class="text-4xl font-bold text-gray-800">Gestionar Usuarios</h2>
            <p class="text-xl text-gray-600 mt-2">@Model.TotalRegistros usuarios registrados</p>
        </div>
        <a asp-action="CrearUsuario" class="bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-3 rounded-xl inline-flex items-center gap-2">
            <i class="ph ph-plus-circle"></i>
            <span>Nuevo Usuario</span>
        </a>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="bg-green-50 border-l-4 border-green-500 text-green-800 px-6 py-4 rounded-r-xl mb-6">
            @TempData["Mensaje"]
        </div>
    }

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 p-6 mb-6">
        <form method="get" asp-action="Usuarios" class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Buscar</label>
                <input type="text" name="Busqueda" value="@Context.Request.Query["Busqueda"]"
                       placeholder="Nombre o email..."
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Rol</label>
                <select name="Rol" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="">Todos</option>
                    <option value="admin" selected="@(Context.Request.Query["Rol"] == "admin")">Administrador</option>
                    <option value="usuario" selected="@(Context.Request.Query["Rol"] == "usuario")">Usuario</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Estado</label>
                <select name="Activo" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                    <option value="">Todos</option>
                    <option value="true" selected="@(Context.Request.Query["Activo"] == "true")">Activo</option>
                    <option value="false" selected="@(Context.Request.Query["Activo"] == "false")">Inactivo</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Fecha de Registro</label>
                <input type="date" name="FechaRegistro" value="@Context.Request.Query["FechaRegistro"]"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
            </div>

            <div class="flex items-end gap-2">
                <button type="submit" class="flex-1 bg-[#1E6241] hover:bg-[#195136] text-white px-6 py-2 rounded-lg inline-flex items-center justify-center gap-2">
                    <i class="ph ph-magnifying-glass"></i>
                    Filtrar
                </button>
                <a asp-action="Usuarios" class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded-lg inline-flex items-center justify-center">
                    <i class="ph ph-x"></i>
                </a>
            </div>
        </form>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Nombre</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Email</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Rol</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Estado</th>
                    <th class="px-6 py-4 text-left text-sm font-semibold text-gray-700">Registro</th>
                    <th class="px-6 py-4 text-right text-sm font-semibold text-gray-700">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var usuario in Model.Items)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                    <i class="ph ph-user text-blue-600"></i>
                                </div>
                                <span class="font-medium text-gray-900">@usuario.Nombre</span>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-gray-600">@usuario.Email</td>
                        <td class="px-6 py-4">
                            <span class="px-3 py-1 rounded-full text-sm @(usuario.Rol == "admin" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                @(usuario.Rol == "admin" ? "Administrador" : "Usuario")
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            @if (usuario.Activo)
                            {
                                <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">Activo</span>
                            }
                            else
                            {
                                <span class="px-3 py-1 rounded-full text-sm bg-gray-100 text-gray-800">Inactivo</span>
                            }
                        </td>
                        <td class="px-6 py-4 text-gray-600">@usuario.FechaRegistro.ToString("dd/MM/yyyy")</td>
                        <td class="px-6 py-4 text-right space-x-2">
                            <a asp-action="EditarUsuario" asp-route-id="@usuario.Id" class="text-blue-600 hover:text-blue-800" title="Editar">
                                <i class="ph ph-pencil text-xl"></i>
                            </a>

                            <form asp-action="EliminarUsuario" asp-route-id="@usuario.Id" method="post" class="inline" onsubmit="return confirm('¿Estás seguro de que quieres eliminar a este usuario?')">
                                <button type="submit" class="text-red-600 hover:text-red-800" title="Eliminar">
                                    <i class="ph ph-trash text-xl"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Items.Any())
        {
            <div class="text-center py-12">
                <i class="ph ph-user-circle text-6xl text-gray-300 mb-4"></i>
                <p class="text-gray-500 text-lg">No se encontraron usuarios</p>
            </div>
        }

        @if (Model.TotalPaginas > 1)
        {
            <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Mostrando @((Model.PaginaActual - 1) * Model.RegistrosPorPagina + 1) a @(Math.Min(Model.PaginaActual * Model.RegistrosPorPagina, Model.TotalRegistros)) de @Model.TotalRegistros resultados
                </div>
                <div class="flex gap-2">
                    @if (Model.TienePaginaAnterior)
                    {
                        <a asp-action="Usuarios"
                           asp-route-pagina="@(Model.PaginaActual - 1)"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-rol="@Context.Request.Query["Rol"]"
                           asp-route-activo="@Context.Request.Query["Activo"]"
                           asp-route-fechaRegistro="@Context.Request.Query["FechaRegistro"]"
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Anterior
                        </a>
                    }

                    @for (int i = Math.Max(1, Model.PaginaActual - 2); i <= Math.Min(Model.TotalPaginas, Model.PaginaActual + 2); i++)
                    {
                        <a asp-action="Usuarios"
                           asp-route-pagina="@i"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-rol="@Context.Request.Query["Rol"]"
                           asp-route-activo="@Context.Request.Query["Activo"]"
                           asp-route-fechaRegistro="@Context.Request.Query["FechaRegistro"]"
                           class="px-4 py-2 border rounded-lg @(i == Model.PaginaActual ? "bg-[#1E6241] text-white border-[#1E6241]" : "border-gray-300 hover:bg-gray-50")">
                            @i
                        </a>
                    }

                    @if (Model.TienePaginaSiguiente)
                    {
                        <a asp-action="Usuarios"
                           asp-route-pagina="@(Model.PaginaActual + 1)"
                           asp-route-busqueda="@Context.Request.Query["Busqueda"]"
                           asp-route-rol="@Context.Request.Query["Rol"]"
                           asp-route-activo="@Context.Request.Query["Activo"]"
                           asp-route-fechaRegistro="@Context.Request.Query["FechaRegistro"]"
                           class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                            Siguiente
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</section>