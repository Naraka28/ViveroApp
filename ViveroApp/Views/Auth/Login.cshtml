@model ViveroApp.Dto.LoginDto
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container mx-auto mt-5">
    <div class="flex justify-center">
        <div class="w-full md:w-1/2 lg:w-1/3">
            <div class="bg-white rounded-lg shadow-lg">
                <div class="p-12">
                    <div class="text-center mb-4">
                        <h2 class="text-2xl font-bold">🌱 ViveroApp</h2>
                        <p class="text-gray-500">Inicia sesión para continuar</p>
                    </div>
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="block mb-2 font-medium"></label>
                            <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="correo@ejemplo.com" autofocus />
                            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="block mb-2 font-medium"></label>
                            <input asp-for="Password" class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                        </div>
                        <div class="flex items-center mb-3">
                            <input asp-for="RememberMe" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label asp-for="RememberMe" class="ml-2"></label>
                        </div>
                        <div class="space-y-2">
                            <button type="submit" class="w-full px-4 py-3 text-lg bg-blue-600 text-white rounded hover:bg-blue-700">
                                Iniciar Sesión
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <p class="mb-0">
                                ¿No tienes cuenta?
                                <a asp-action="Register" class="text-blue-600 hover:underline">Regístrate aquí</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}