<div class="max-w-6xl mx-auto px-6 py-12">

    @if (TempData["Mensaje"] != null)
    {
        <div class="mb-8 bg-green-100 border-l-4 border-green-600 p-4 rounded-r-lg text-green-900 flex items-center gap-3">
            <i class="ph ph-check-circle text-2xl"></i>
            <span>@TempData["Mensaje"]</span>
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- Columna lateral -->
        <aside class="bg-white shadow-lg rounded-3xl p-8">
            <!-- Avatar -->
            <div class="flex flex-col items-center">
                <div class="w-28 h-28 bg-gray-100 rounded-full flex items-center justify-center text-gray-700 text-5xl shadow-md">
                    <i class="ph ph-user"></i>
                </div>

                <h2 class="text-xl font-semibold text-gray-900 mt-4">@Model.Nombre</h2>
                <p class="text-gray-500 text-sm">@Model.Email</p>

                <span class="mt-3 px-3 py-1 text-xs rounded-full
                      @(Model.Activo ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                    @(Model.Activo ? "Cuenta Activa" : "Cuenta Inactiva")
                </span>
            </div>

            <!-- Stats -->
            <div class="grid grid-cols-2 gap-4 text-center mt-6">
                <div>
                    <p class="text-3xl font-bold text-gray-800">@Model.TotalPlantas</p>
                    <p class="text-xs text-gray-500">Plantas</p>
                </div>
                <div>
                    <p class="text-3xl font-bold text-gray-800">@Model.DiasComoMiembro</p>
                    <p class="text-xs text-gray-500">Días miembro</p>
                </div>
            </div>

            <!-- Acciones rápidas -->
            <div class="mt-8 space-y-2">
                <a asp-action="Editar" class="flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-all">
                    <i class="ph ph-pencil-simple text-gray-500"></i>
                    <span>Editar Perfil</span>
                </a>
                <a asp-action="CambiarContrasena" class="flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-all">
                    <i class="ph ph-key text-gray-500"></i>
                    <span>Cambiar Contraseña</span>
                </a>
                <a asp-controller="MiJardin" asp-action="Index" class="flex items-center gap-3 p-3 hover:bg-gray-50 rounded-lg transition-all">
                    <i class="ph ph-flower text-gray-500"></i>
                    <span>Mi Jardín</span>
                </a>
            </div>
        </aside>



        <!-- Contenido principal -->
        <main class="lg:col-span-2 space-y-8">

            <!-- Información personal -->
            <div class="bg-white shadow-lg rounded-3xl p-8">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="text-2xl font-semibold">Información Personal</h3>
                    <a asp-action="Editar" class="text-green-700 hover:text-green-800 text-sm font-medium flex items-center gap-2">
                        <i class="ph ph-pencil-simple"></i> Editar
                    </a>
                </div>

                <div class="space-y-5">

                    <div class="flex items-start gap-4">
                        <i class="ph ph-user text-gray-400 text-2xl"></i>
                        <div>
                            <p class="text-sm text-gray-500">Nombre Completo</p>
                            <p class="font-medium">@Model.Nombre</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <i class="ph ph-envelope-simple text-gray-400 text-2xl"></i>
                        <div>
                            <p class="text-sm text-gray-500">Correo electrónico</p>
                            <p class="font-medium">@Model.Email</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <i class="ph ph-calendar text-gray-400 text-2xl"></i>
                        <div>
                            <p class="text-sm text-gray-500">Miembro desde</p>
                            <p class="font-medium">@Model.FechaRegistro.ToString("dd/MM/yyyy")</p>

                        </div>
                    </div>

                    @if (Model.UltimoAcceso.HasValue)
                    {
                        <div class="flex items-start gap-4">
                            <i class="ph ph-clock text-gray-400 text-2xl"></i>
                            <div>
                                <p class="text-sm text-gray-500">Último acceso</p>
                                <p class="font-medium">@Model.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                    }

                </div>
            </div>


            <!-- Seguridad -->
            <div class="bg-white shadow-lg rounded-3xl p-8">
                <h3 class="text-2xl font-semibold mb-6">Seguridad</h3>

                <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl">
                    <div class="flex items-center gap-4">
                        <i class="ph ph-shield-check text-green-600 text-3xl"></i>
                        <div>
                            <p class="font-medium">Contraseña</p>
                            <p class="text-sm text-gray-600">••••••••</p>
                        </div>
                    </div>
                    <a asp-action="CambiarContrasena"
                       class="px-6 py-2 bg-green-700 hover:bg-green-800 text-white rounded-lg text-sm font-medium">
                        Cambiar
                    </a>
                </div>
            </div>


            <!-- Zona de peligro -->
            <div class="bg-red-50 border border-red-200 rounded-3xl p-8">
                <h3 class="text-xl font-semibold text-red-800 mb-4">Desactivar cuenta</h3>
                <p class="text-sm text-red-700 mb-4">
                    Si desactivas tu cuenta, perderás acceso a tu jardín y tus plantas.
                </p>

                <button onclick="confirmarDesactivacion()"
                        class="bg-red-700 hover:bg-red-800 text-white px-6 py-2 rounded-lg text-sm font-medium">
                    Desactivar cuenta
                </button>
            </div>

        </main>
    </div>
</div>


<!-- Modal -->
<div id="modalDesactivar"
     class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">

    <div class="bg-white rounded-xl p-8 max-w-md mx-4">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">¿Estás seguro?</h3>
        <p class="text-gray-600 mb-6">
            Esta acción desactivará tu cuenta. Podrás reactivarla contactando al administrador.
        </p>

        <form asp-action="DesactivarCuenta" method="post" class="space-y-3">
            <button type="submit"
                    class="w-full bg-red-700 hover:bg-red-800 text-white px-4 py-3 rounded-lg font-semibold">
                Sí, desactivar mi cuenta
            </button>
            <button type="button" onclick="cerrarModal()"
                    class="w-full bg-gray-200 hover:bg-gray-300 px-4 py-3 rounded-lg font-semibold">
                Cancelar
            </button>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        function confirmarDesactivacion() {
            document.getElementById('modalDesactivar').classList.remove('hidden');
        }
        function cerrarModal() {
            document.getElementById('modalDesactivar').classList.add('hidden');
        }
    </script>
}
